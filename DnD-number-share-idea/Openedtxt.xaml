<Window x:Class="DnD_number_share_idea.Openedtxt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_number_share_idea"
        mc:Ignorable="d"
        Title="Openedtxt" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Players">
                <StackPanel>
                    <Button Content="Add New Player" Margin="5" Padding="3" HorizontalAlignment="Left" Click="AddNewPlayer_Click"/>
                       <ListView ItemsSource="{Binding Players}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <!-- Player details template -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CharacterName}"/>
                                        <!-- Add more player details here -->
                                        <TextBox Text="{Binding Class}" Width="200"/>
                                        <TextBox Text="{Binding Level}" Width="50"/>
                                        <TextBox Text="{Binding Str}" Width="50"/>
                                        <TextBox Text="{Binding Dex}" Width="50"/>
                                        <TextBox Text="{Binding Con}" Width="50"/>
                                        <TextBox Text="{Binding Int}" Width="50"/>
                                        <TextBox Text="{Binding Wis}" Width="50"/>
                                        <TextBox Text="{Binding Cha}" Width="50"/>
                                        <TextBox Text="{Binding Notes}" Width="200" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                       </ListView>
                </StackPanel>
            </TabItem>
            <TabItem Header="NPCs">
                <StackPanel>
                    <Button Content="Add New NPC" Margin="5" Padding="3" HorizontalAlignment="Left" Click="AddNewNPC_Click"/>
                    <ListView ItemsSource="{Binding NPCs}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- NPC details template -->
                                <StackPanel>
                                    <TextBlock Text="{Binding NPCName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding NPCDescription}"/>
                                    <!-- Add more NPC details here -->
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </TabItem>
            <TabItem Header="Notes">
                <StackPanel>
                    <Button Content="Add New Note" Margin="5" Padding="3" HorizontalAlignment="Left" Click="AddNewNote_Click"/>
                    <ListView ItemsSource="{Binding Notes}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- Note details template -->
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Content}"/>
                                    <!-- Add more note details here -->
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
