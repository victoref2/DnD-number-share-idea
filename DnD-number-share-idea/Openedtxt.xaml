<Window x:Class="DnD_number_share_idea.Openedtxt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_number_share_idea"
        mc:Ignorable="d"
        Title="Openedtxt" Height="450" Width="800">
    <Grid>
        <TabControl ItemsSource="{Binding Players}">
            <TabControl.ItemTemplate>
                <!-- This defines the header of each tab (player's character name) -->
                <DataTemplate>
                    <TextBlock Text="{Binding CharacterName}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <!-- This defines the content within each tab -->
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBox Text="{Binding Name, Mode=TwoWay}" FontWeight="Bold"/>
                            <TextBox Text="{Binding Class, Mode=TwoWay}" FontStyle="Italic"/>
                            <TextBox Text="{Binding Level, Mode=TwoWay}" />
                            <!-- Editable player attributes -->
                            <TextBox Text="{Binding Str, Mode=TwoWay}" />
                            <TextBox Text="{Binding Dex, Mode=TwoWay}" />
                            <TextBox Text="{Binding Con, Mode=TwoWay}" />
                            <TextBox Text="{Binding Int, Mode=TwoWay}" />
                            <TextBox Text="{Binding Wis, Mode=TwoWay}" />
                            <TextBox Text="{Binding Cha, Mode=TwoWay}" />
                            <TextBox Text="{Binding Notes, Mode=TwoWay}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
