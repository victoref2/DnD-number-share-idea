<Window x:Class="DnD_number_share_idea.Spell_maker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_number_share_idea"
        mc:Ignorable="d"
        Title="Spell_maker" Height="450" Width="800">
    <StackPanel Margin="10">
        <!-- Spell Name -->
        <TextBox x:Name="SpellNameTextBox" Text="Spell Name" Margin="0,0,0,10"/>

        <!-- Spell Components -->
        <CheckBox x:Name="VerbalComponentCheckBox" Content="Verbal (V)" Margin="0,0,0,5"/>
        <CheckBox x:Name="SomaticComponentCheckBox" Content="Somatic (S)" Margin="0,0,0,10"/>

        <!-- Additional Components -->
        <StackPanel x:Name="AdditionalComponentsStackPanel">
            <TextBox Text="Component 1" Margin="0,0,0,5"/>
            <TextBox Text="Component 2" Margin="0,0,0,5"/>
            <TextBox Text="Component 3" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Navigation Buttons -->
        <Button Content="Next" HorizontalAlignment="Right" Click="Next_Click"/>
    </StackPanel>
</Window>
