<Window x:Class="DnD_number_share_idea.Spell_maker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_number_share_idea"
        Background="Black"
        mc:Ignorable="d"
        Title="Spell_maker" Height="400" Width="300">
    <StackPanel Margin="10">
        <TextBox x:Name="NameTextBox" Margin="5" Text="Name"/>
        <TextBox x:Name="LevelTextBox" Margin="5" Text="Level"/>
        <TextBox x:Name="Casting_time" Margin="5" Text="Casting time"/>
        <TextBox x:Name="Duration" Margin="5" Text="Duration"/>
        <TextBox x:Name="RangeTextBox" Margin="5" Text="Range"/>
        <TextBox x:Name="DamageTextBox" Margin="5" Text="Damage"/>
        <TextBox x:Name="ComponentsTextBox" Margin="5" Text="Components"/>
        <TextBox x:Name="DescriptionTextBox" Margin="5" Text="Description" Height="100" TextWrapping="Wrap"/>
        <Button Content="Done" HorizontalAlignment="Right" Margin="5" Click="Done_Click"/>
    </StackPanel>
</Window>
